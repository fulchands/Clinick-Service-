<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignActivity">


    <TextView
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:id="@+id/txt_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to UTech"
        android:textStyle="bold"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="100dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign into your account"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="152dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:id="@+id/edt_text1"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:textColor="@color/black"
        android:background="@drawable/custom_edit_text_bg2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="50dp"
        android:hint="@string/phone_or_email_address"
        android:textSize="18sp"
        android:inputType="number"
        android:textStyle="bold"



        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="218dp" />

    <EditText
        android:id="@+id/edt_text2"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="@dimen/_250sdp"
        android:background="@drawable/custom_edit_text_bg2"
        android:layout_height="50dp"
        android:inputType="number"
        android:hint="@string/password"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:id="@+id/btn_login"
        android:layout_height="@dimen/_32sdp"
        android:text="Log in"
android:gravity="center_vertical"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
       android:textAlignment="center"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        tools:ignore="RtlCompat" />

    <TextView
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="forget password?"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/lightblue"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>


